{
  "name": "cop",
  "version": "4.0.1",
  "description": "A Telegram bot for managing Telegram groups",
  "main": "/src/app.js",
  "files": [
    "dist",
    "src",
    "package.json",
    "README.md"
  ],
  "scripts": {
    "docker:stop": "docker-compose stop",
    "docker:down": "docker-compose down",
    "docker:build": "docker-compose build",
    "docker:run": "docker-compose up",
    "docker:start": "docker-compose up --build",
    "build": "tsc",
    "test": "mocha --config .mochar.json",
    "clean": "rm -rf dist",
    "main": "npm run build & node --env-file=.env dist/app.js",
    "start": "NODE_ENV=development node --trace-uncaught -r ts-node/register --env-file=.env src/app.ts",
    "start:deploy": "NODE_ENV=production node --trace-uncaught -r ts-node/register src/app.ts"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/CodeModule-ir/cop.git"
  },
  "keywords": [
    "CodeModule",
    "Bot",
    "telegram-bot"
  ],
  "author": "mahdi",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/CodeModule-ir/cop/issues"
  },
  "engines": {
    "node": ">=20.0.0"
  },
  "homepage": "https://github.com/CodeModule-ir/cop#readme",
  "dependencies": {
    "@medishn/gland-logger": "^1.0.5",
    "grammy": "^1.27.0",
    "pg": "^8.13.1"
  },
  "devDependencies": {
    "@types/pg": "^8.11.10",
    "ts-node": "^10.9.2",
    "typescript": "^5.5.4"
  }
}
